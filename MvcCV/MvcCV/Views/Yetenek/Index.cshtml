@using MvcCV.Models.Entity
@model List<Tbl_MySkills>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}
@{ string labelrenk = "";}
<!DOCTYPE html>
<html lang="en">

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        >
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YeniYetenek" class="btn btn-outline-info">Yeni Yetenek Ekle</a>
                                <br/>
                                <br/>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek</th>
                                            <th>Derece</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>İşlemler</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var x in Model) {
                                            if (x.Ratio >= 0 && x.Ratio<=50)
                                            {
                                                renk = "progress-bar bg-danger";
                                                labelrenk = "badge bg-danger";
                                            }
                                            if(x.Ratio>=51 && x.Ratio <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                                labelrenk = "badge bg-warning";
                                            }
                                            if (x.Ratio >= 71 && x.Ratio <= 84)
                                            {
                                                renk = "progress-bar bg-primary";
                                                labelrenk = "badge bg-primary";
                                            }
                                            if (x.Ratio >= 84 && x.Ratio <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelrenk = "badge bg-success";
                                            }
                                            <tr>
                                            <td>@x.ID</td>
                                            <td>@x.Skill</td>
                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width:@x.Ratio%"> </div>
                                                </div>
                                            </td>
                                            <td><span class="@labelrenk">@x.Ratio%</span></td>
                                            <td><a href="/Yetenek/YetenekSil/@x.ID" class="btn btn-outline-danger">Sil</a>
                                            <a href="/Yetenek/YetenekDuzenle/@x.ID" class="btn btn-outline-warning">Güncelle</a></td>
                                        </tr>
                                        }
                                     
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->

                        </div>
                        <!-- /.card -->
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <!-- /.row -->
            </div>
            <!-- /.card-header -->
            <!-- /.card-body -->
    </div>
    <!-- /.card -->
    
    <!-- /.row -->
    <div class="row">
        <div class="col-12">
            <div class="card">

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    
    <!-- /.row -->
</body>
</html>


