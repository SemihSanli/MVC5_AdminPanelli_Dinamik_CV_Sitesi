@using MvcCV.Models.Entity
@model List<Tbl_About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hakkımda Sayfası</h2>
<br />
<form method="post">
    @foreach (var x in Model)
    {
        <label>Ad</label><input type="text" name="Name" value="@x.Name" class="form-control" />
        <br />
        <label>Soyad</label><input type="text" name="Surname" value="@x.Surname" class="form-control" />
        <br />
        <label>Adres</label><input type="text" name="Address" value="@x.Address" class="form-control" />
        <br />
        <label>Telefon</label><input type="text" name="Phone" value="@x.Phone" class="form-control" />
        <br />
        <label>Mail</label><input type="text" name="Mail" value="@x.Mail" class="form-control" />
        <br />
        <label>Açıklama</label><textarea rows="5" class="form-control" name="Description">@x.Description</textarea>
        <br />
        <label>Resim</label><input type="text" name="Images" value="@x.Images" class="form-control" />
    }
    <br />
    <button class="btn btn-outline-success">Güncelle</button>
</form>